{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": false,
    "outDir": "./dist",
    "rootDir": "./",
    "baseUrl": "./",
    "paths": {
      "@/*": ["./app/*"]
    },
    "types": ["node"],
    "lib": ["ES2022"],
    "jsx": "react-jsx"
  },
  "include": [
    "scripts/**/*",
    "app/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    ".next",
    "out"
  ]
}